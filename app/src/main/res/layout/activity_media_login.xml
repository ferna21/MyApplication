<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MediaLoginActivity">

    <ImageView
        android:id="@+id/img1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/a2"
        android:scaleType="centerCrop"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#a8000000"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="40dp"
            android:src="@drawable/logo2" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLoginPrincipal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/btn_redondo_login"
            android:singleLine="true"
            android:text="Iniciar sesion"
            android:textColor="@color/white"
            android:textSize="15sp"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLoginGoogle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:singleLine="true"
            android:background="@drawable/btn_redondo_google"
            android:text="Continuar con Google"
            android:textSize="15sp"
            android:textColor="@color/gray"
            app:icon="@drawable/google_logo"
            app:backgroundTint="@color/white"
            app:iconTintMode="multiply"
            app:iconSize="30dp"
            />

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:text="Continuar con Facebook"
            android:textColor="@color/white"
            android:background="@drawable/btn_redondo_facebook"
            android:textSize="15sp"
            />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>